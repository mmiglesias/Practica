{
  "commitizen": {
    "tag_format": "$minor.$major.$patch-RELEASE",
    "name": "cz_customize",
    "customize": {

      "change_type_order": [
        "BREAKING CHANGE",
        "Features",
        "Fixes",
        "Styles",
        "Performance",
        "Improvements",
        "Test",
		"Documentation",
        "Build",
        "CI"
      ],
   
      "info_path": "cz_customize_info.txt",
      "info": "This is customized info",
      "commit_parser": "^(?P<change_type>feat|fix|docs|test|ci|improvement|perf|build|styles|BREAKING CHANGE)(?:\\((?P<scope>[^()\\r\\n]*)\\)|\\()?(?P<breaking>!)?:\\s(?P<message>.*)\\n\\n(?P<body>*",
      "change_type_map": {
        "feat": "Features",
        "fix": "Fixes",
        "docs": "Documentation",
        "test": "Test",
        "ci": "CI",
        "build": "Build",
        "improvement": "Improvements",
        "perf": "Performance",
        "styles": "Styles",
        "BREAKING CHANGE": "BREAKING CHANGE"
      }
    }
  }
}
